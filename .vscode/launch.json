  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Current File Program",
      "program": "${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Launch Node App Program",
      "program": "${workspaceFolder}\\app.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Launch Node Index Program",
      "program": "${workspaceFolder}\\index.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"      
      ],
      "type": "pwa-node"
    }
  ]
}